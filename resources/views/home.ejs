    <section class="hero py-16">
        <div class="container mx-auto flex items-center justify-between py-4">
            <div>
                <img src="/img/hero-cake.png" alt="img">
            </div>
        </div>
    </section>
    <section class="menu container mx-auto py-8">
        <h1 class="text-menu font-bold mb-8">Our Menu</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 cols-gap-12 row-gap-16" >

            <% cakes.forEach(cake => { %>
                <div class="w-full" >
                    
                    <div data-cake="<%= JSON.stringify(cake) %> " class="card add-to-dart">
                        <div class="card__inner">
                            <div class="card__face card__face--front">

                                <div class="card__header">
                                    <div><img src="/img/<%=cake.image%>" alt="" class="item-img" /></div>
                                </div>
                                <br>  
                            </div>
                            <div class="card-items">
                                <h2 class="mb-4 text-4xl card__body item-name"><%=cake.name%></h2>
                           </div>
                            
                            <div class="card-size">
                                <h2 class="mb-4 text-lg">Size: <%=cake.size%></h2>
                            </div>

                           <div class="card-info">
                            <p><i class="fas fa-info-circle"></i> Click the card for more information.</p>
                           </div>

                            <div class="card__face card__face--back">
                                <div class="card__content">
                                    <div class="card__header">
                                        <div>
                                            <img src="/img/<%=cake.image%>" alt="item image" class="item-img" />
                                        </div>
                                        
                                    </div>
                                    <div class="card-desc">
                                        <h2 class="mb-4 text-lg"><%=cake.description%></h2>
                                    </div>
                                    
                                    <div class="card__body">
                                        
                                    </div>
                                </div>
                            </div>   
                        </div>
                        
                        <div class="flex items-center justify-around mt-6">
                            <span class="font-bold text-lg">â‚¹ <%=cake.price%></span>
                            <button data-cake="<%= JSON.stringify(cake) %> " class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                                <span>+</span>
                                <span class="ml-4">Add</span>
                            </button>
                        </div>
                    </div>
                </div>
           <% }) %>
            
        </div>
    </section>
